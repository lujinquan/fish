.main {
  width: 750rpx;
  height: 100%;
  background: #000;
  overflow: hidden;
  z-index: 99999;
}

.main .section video {
  width: 750rpx;
  height: 100vh;
}

.main .goods {
  height: auto;
  padding: 30rpx;
  position: fixed;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 990;
  color: #fff;
  font-size: 30rpx;
  background: rgba(0, 0, 0, .3);
  border-radius: 10rpx 10rpx 0 0;
}

.main .goods .img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  z-index: 1000;
}

.main .goods .salePrice {
  font-size: 36rpx;
  font-weight: bold;
  display: inline-block;
  color: #f75451;
}

button.buy-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  background:#ff5041;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  line-height: 1;
  color: #fff;
}